  <h1>ðŸŽ¥ AI Video Generator</h1>
  <p>Enter a prompt and generate a short videoâ€”no login, no limits.</p>

  <input type="text" id="prompt" placeholder="Describe your video idea..." size="50"/>
  <button onclick="generateVideo()">Generate Video</button>

  <div id="status"></div>
  <video id="video" controls hidden></video>

  <script>
    async function generateVideo() {
      const prompt = document.getElementById('prompt').value;
      const status = document.getElementById('status');
      const video = document.getElementById('video');
      video.hidden = true;
      status.textContent = 'Generating video...';

      try {
        // Replace this with your actual API call
        const response = await fetch('https://aivideomaker.ai/api/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt })
        });

        const data = await response.json();
        if (data.video_url) {
          video.src = data.video_url;
          video.hidden = false;
          status.textContent = 'Hereâ€™s your video!';
        } else {
          status.textContent = 'Failed to generate video.';
        }
      } catch (err) {
        status.textContent = 'Error: ' + err.message;
      }
    }
  </script>
